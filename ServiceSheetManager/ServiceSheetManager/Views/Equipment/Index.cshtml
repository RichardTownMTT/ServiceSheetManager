@model ServiceSheetManager.ViewModels.EquipmentVMs.EquipmentListVM

@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
@if (Model.AllItems.Count == 0)
{
    <h2>There is no equipment to display</h2>
}
else
{
    <table class="table">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.AllItems.FirstOrDefault().Barcode)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.AllItems.FirstOrDefault().Description)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.AllItems.FirstOrDefault().SerialNumber)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.AllItems.FirstOrDefault().CalibrationPeriodDays)
            </th>
            <th></th>
        </tr>

        @foreach (var item in Model.AllItems)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Barcode)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Description)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.SerialNumber)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.CalibrationPeriodDays)
                </td>
                <td>
                    @Html.ActionLink("Edit", "Edit", new { id = item.Id }) |
                    @Html.ActionLink("Details", "Details", new { id = item.Id }) @*|
                    @Html.ActionLink("Delete", "Delete", new { id = item.Id })*@
                </td>
            </tr>
        }

    </table>
}