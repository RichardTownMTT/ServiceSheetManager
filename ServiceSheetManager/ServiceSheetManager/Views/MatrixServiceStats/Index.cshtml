@model ServiceSheetManager.ViewModels.MatrixServiceStatsVM

@{
    ViewData["Title"] = "Matrix Service Statistics";
}


<h2 class="page-header">Matrix Service Statistics</h2>

<div class="panel panel-default">
    <div class="panel-heading">
        <h3>Service Contract Overview</h3>
    </div>
    <div class="panel-body">
        <table class="table">
            <thead>
                <tr>
                    <th class="text-center">Total Days Used</th>
                    <th class="text-center">Days Remaining</th>
                    <th class="text-center">Percentage Used</th>
                    <th class="text-center">Contract Days Completed</th>
                    <th class="text-center">Contract Percentage Completed</th>
                </tr>
            </thead>
            <tbody>
                <tr>
                    <td class="text-center">@Html.DisplayFor(m => Model.ServiceOverview.TotalDaysUsed)</td>
                    <td class="text-center">@Html.DisplayFor(m => Model.ServiceOverview.Remaining)</td>
                    <td class="text-center">@Html.DisplayFor(m => Model.ServiceOverview.PercentageUsed)</td>
                    <td class="text-center">@Html.DisplayFor(m => Model.ServiceOverview.ContractDaysCompleted)</td>
                    <td class="text-center">@Html.DisplayFor(m => Model.ServiceOverview.PercentageContractCompleted)</td>
                </tr>
            </tbody>
        </table>
    </div>
</div>
<div class="panel panel-default">
    <div class="panel-heading">
        <h3>Job Numbers</h3>
    </div>
    <div class="panel-body">
        <h4>The following job numbers have been completed as part of this contract:</h4>
        <ul class="list-group">
            @foreach (var jobNumber in Model.AllJobNumbers)
            {
                <li class="list-group-item">@jobNumber.MttJobNumber</li>
            }
        </ul>
    </div>
</div>