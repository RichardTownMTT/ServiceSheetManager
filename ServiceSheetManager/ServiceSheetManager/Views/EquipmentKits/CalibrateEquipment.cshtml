@model ServiceSheetManager.ViewModels.EquipmentVMs.DisplayEquipmentKitVM

@{
    ViewBag.Title = "Away for Calibration";
}

<h2>Would you like to mark this as away for calibration?</h2>

<div>
    <h4>Equipment Kit Details</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayNameFor(model => model.Barcode)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Barcode)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.Description)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Description)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.EquipmentType)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.EquipmentType)
        </dd>

    </dl>
    <hr />
    <h4>Equipment Details</h4>


    @foreach (var item in Model.EquipmentItems)
    {
        <dl class="dl-horizontal">
            <dt>
                @Html.DisplayNameFor(i => item.Description)
            </dt>
            <dd>
                @Html.DisplayFor(i => item.Description)
            </dd>
            <dt>
                @Html.DisplayNameFor(i => item.SerialNumber)
            </dt>
            <dd>
                @Html.DisplayFor(i => item.SerialNumber)
            </dd>
            <dt>
                @Html.DisplayNameFor(i => item.CalibrationPeriodYears)
            </dt>
            <dd>
                @Html.DisplayFor(i => item.CalibrationPeriodYears)
            </dd>
            <dt>
                @Html.DisplayNameFor(i => item.LastCalDate)
            </dt>
            <dd>
                @Html.DisplayFor(i => item.LastCalDate)
            </dd>
            <dt>
                @Html.DisplayNameFor(i => item.NextCalDate)
            </dt>
            <dd>
                @Html.DisplayFor(i => item.NextCalDate)
            </dd>
        </dl>
    }
    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()

        <div class="form-actions no-color">
            <input type="submit" value="Away for Calibration" class="btn btn-default" /> |
            @Html.ActionLink("Back to List", "Index")
        </div>
    }
</div>

