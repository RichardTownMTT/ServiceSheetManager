@model ServiceSheetManager.ViewModels.MatrixServiceStatsVM

@{
    ViewData["Title"] = "Index";
}

<h2>Index</h2>

<div>
    <p>Matrix Job Numbers</p>
    <table>
        <tr>
            <th>Job Number</th>
        </tr>
        @foreach (var jobNumber in Model.AllJobNumbers)
            {
            <tr>
                <td>
                    @Html.DisplayFor(m => jobNumber.MttJobNumber)
                </td>
            </tr>
        }
    </table>
</div>

<div>
    <p>Service Usage Overview</p>
    <div class="row">
        <div class="col-md-2"></div>
        <div class="col-md-2">Total Days Used</div>
        <div class="col-md-2">Remaining</div>
        <div class="col-md-2">Percentage Used</div>
        <div class="col-md-2">Contract Days Completed</div>
        <div class="col-md-2">Contract Percentage Completed</div>
    </div>
    <div class="row">
        <div class="col-md-2"></div>
        <div class="col-md-2">@Html.DisplayFor(m => Model.ServiceOverview.TotalDaysUsed)</div>
        <div class="col-md-2">@Html.DisplayFor(m => Model.ServiceOverview.Remaining)</div>
        <div class="col-md-2">@Html.DisplayFor(m => Model.ServiceOverview.PercentageUsed)</div>
        <div class="col-md-2">@Html.DisplayFor(m => Model.ServiceOverview.ContractDaysCompleted)</div>
        <div class="col-md-2">@Html.DisplayFor(m => Model.ServiceOverview.PercentageContractCompleted)</div>
    </div>
</div>